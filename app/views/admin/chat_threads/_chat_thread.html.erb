<div id="<%= dom_id chat_thread %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Message code:</strong>
    <%= chat_thread.message_code %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Ts code:</strong>
    <%= chat_thread.ts_code %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Message:</strong>
    <%= chat_thread.message %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Role:</strong>
    <%= chat_thread.role %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Team code:</strong>
    <%= chat_thread.team_code %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Channel code:</strong>
    <%= chat_thread.channel_code %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this chat thread", [:admin, chat_thread], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this chat thread', edit_admin_chat_thread_path(chat_thread), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% if chat_thread.user? %>
      <%= button_to 'Enqueue Mention Job', admin_chat_thread_mention_jobs_path(chat_thread), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium", method: :post %>
    <% end %>
    <% if chat_thread.assistant? %>
      <%= button_to 'Enqueue Response Job', admin_chat_thread_response_jobs_path(chat_thread), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium", method: :post %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
